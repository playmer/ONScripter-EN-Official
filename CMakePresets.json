{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja",
            "displayName": "Ninja Multi-Config",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all configurations",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/extlib/vcpkg/scripts/buildsystems/vcpkg.cmake"
                }
            }
        },
        {
            "name": "android_x86_64",
            "displayName": "Android x86_64",
            "description": "Configure with vcpkg toolchain and generate Ninja project files for all android configuration",
            "binaryDir": "${sourceDir}/builds/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "${sourceDir}/extlib/vcpkg/scripts/buildsystems/vcpkg.cmake"
                },
                "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
                    "type": "FILEPATH",
                    "value": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake"
                },
                "VCPKG_TARGET_TRIPLET": {
                    "type": "string",
                    "value": "x64-android"
                },
                "CMAKE_SYSTEM_VERSION": {
                    "type": "string",
                    "value": "$env{ANDROID_PLATFORM}"
                },
                "ANDROID_PLATFORM": {
                    "type": "string",
                    "value": "android-$env{ANDROID_PLATFORM}"
                },
                "CMAKE_SYSTEM_NAME": {
                    "type": "string",
                    "value": "Android"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-debug",
            "configurePreset": "ninja",
            "displayName": "Build (Debug)",
            "description": "Build with Ninja/vcpkg (Debug)",
            "configuration": "Debug"
        },
        {
            "name": "ninja-release",
            "configurePreset": "ninja",
            "displayName": "Build (Release)",
            "description": "Build with Ninja/vcpkg (Release)",
            "configuration": "Release"
        },
        {
            "name": "ninja-vcpkg",
            "configurePreset": "ninja",
            "displayName": "Build",
            "description": "Build with Ninja/vcpkg"
        },
        {
            "name": "android-debug",
            "configurePreset": "android_x86_64",
            "displayName": "Build (Debug)",
            "description": "Build with Ninja/vcpkg for Android (Debug)",
            "configuration": "Debug"
        },
        {
            "name": "android-release",
            "configurePreset": "android_x86_64",
            "displayName": "Build (Release)",
            "description": "Build with Ninja/vcpkg for Android (Release)",
            "configuration": "Release"
        },
        {
            "name": "android-vcpkg",
            "configurePreset": "android_x86_64",
            "displayName": "Build",
            "description": "Build with Ninja/vcpkg for Android"
        }
    ],
    "packagePresets": [
        {
            "name": "ninja-package-debug",
            "configurePreset": "ninja",
            "displayName": "Package (Debug)",
            "description": "Package with Ninja/vcpkg (Debug)",
            "generators": ["ZIP"]
        },
        {
            "name": "ninja-package-release",
            "configurePreset": "ninja",
            "displayName": "Package (Release)",
            "description": "Package with Ninja/vcpkg (Release)",
            "generators": ["ZIP"]
        }
    ]
}
