{
  "name": "onscripter-en",
  "version-string": "0.1.0-dev",
  "dependencies": [
    "bzip2",
    "dirent",
    {
      "name": "ffmpeg",
      "features": [ "avcodec", "avdevice", "avfilter", "avformat", "openh264" ]
    },
    "freetype",
    "libjpeg-turbo",
    "libmad",
    "libogg",
    "libpng",
    "libvorbis",
    "lua",
    "sdl2",
    {
      "name": "sdl2",
      "features": [ "base", "vulkan" ],
      "platform": "windows|osx|ios|android"
    },
    {
      "name": "sdl2",
      "features": [ "base", "vulkan", "wayland", "x11" ],
      "platform": "linux"
    },
    {
      "name": "sdl2-image",
      "features": [ "libjpeg-turbo" ]
    },
    "sdl2-mixer",
    "sdl2-ttf",
    "smpeg2",
    "zlib"
  ]
}